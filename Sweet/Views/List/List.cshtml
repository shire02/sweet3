@model IEnumerable<Sweet.Models.CTickets>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .right{

     position: absolute;
     right: 100px;
     }
</style>

    <div class="right ">
        @using(Html.BeginForm("Index","List", FormMethod.Get))
        {
          <b>View Tickets:</b>  <br />

        @Html.RadioButton("SearchBy", "status")<text> Open Ticket</text>
        @Html.RadioButton("SearchBy", "status")<text> Colse Ticket</text><br />
        }
    </div>


<h3>List of  Tickets </h3>

    @Html.ActionLink("Create Appointment ", "Create", "Appoint", routeValues: null, htmlAttributes: new { id = "IndexLink" })||
    @Html.ActionLink("View Appointment ", "Index", "Appoint", routeValues: null, htmlAttributes: new { id = "IndexLink" })


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Issue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Issue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            
        </tr>
    }

</table>
